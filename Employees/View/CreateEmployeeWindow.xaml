<Window x:Class="Employees.View.CreateEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Employees.View"
        mc:Ignorable="d"
        Title="Создание" Height="450" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Фамилия" Grid.Row="0"/>
        <TextBox Name="SurnameTextBox" Grid.Row="1"/>
        <TextBlock Text="Имя" Grid.Row="2"/>
        <TextBox Name="NameTextBox" Grid.Row="3"/>
        <TextBlock Text="Отчество" Grid.Row="4"/>
        <TextBox Name="PatronymicTextBox" Grid.Row="5"/>
        <TextBlock Text="Отдел" Grid.Row="6"/>
        <ComboBox Name="SubdivisionsComboBox" Grid.Row="7" DisplayMemberPath="SubdivisionName"/>
        <Button Content="Сохранить" Click="Save" Grid.Row="8" Width="100" Margin="5"/>
    </Grid>
</Window>
